<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainTitleLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:background="@color/diyGreenColor"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp">

    <!--<ImageView-->
    <!--android:id="@+id/left_logo"-->
    <!--android:layout_width="40dp"-->
    <!--android:layout_height="40dp"-->
    <!--android:layout_alignParentLeft="true"-->
    <!--android:layout_marginRight="10dp"-->
    <!--/>-->
    <LinearLayout
        android:id="@+id/searchLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_white_round_bg"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/airLinear"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/edit_green_round_bg"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/diyWhiteColor"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@id/homeSearch_edit"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/edit_white_round_bg"
            android:drawableRight="@mipmap/icon_search"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:text="@string/str_msg201"
            android:textColor="@color/diy_date"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/airLinear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@id/temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/diyWhiteColor"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/airCondition"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/diyWhiteColor"
            android:textSize="10sp" />
    </LinearLayout>
</RelativeLayout>