<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/recyclerview_footer_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <ProgressBar
            android:id="@+id/recyclerview_footer_progressbar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:indeterminateBehavior="repeat"
            android:indeterminateDrawable="@drawable/progress_drawable_loading"
            android:indeterminateDuration="500"
            android:indeterminateOnly="true"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/recyclerview_footer_hint_textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/load_more_footer_hint"
            android:textColor="#666666"
            android:textSize="15sp" />
    </RelativeLayout>

</LinearLayout>