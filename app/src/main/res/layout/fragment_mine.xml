<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/diy_lightGray"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@id/linearlayout1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@mipmap/head_bg"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@id/imageView1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/mylogo"
                android:visibility="gone" />

            <TextView
                android:id="@id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_bg"
                android:gravity="center"
                android:text="@string/str_msg202"
                android:textColor="@color/diyWhiteColor"
                android:textSize="18sp" />

            <TextView
                android:id="@id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/str_msg101"
                android:textColor="@color/diy_white"
                android:textSize="@dimen/text" />
        </LinearLayout>

        <RelativeLayout
            android:id="@id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/diy_white"
            android:gravity="center_vertical"
            android:padding="@dimen/padding">

            <ImageView
                android:id="@id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon1" />

            <TextView
                android:id="@id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/imageView2"
                android:text="@string/str_msg102"
                android:textColor="@color/diy_dark"
                android:textSize="@dimen/text" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/more" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/diy_gray" />

        <LinearLayout
            android:id="@id/linearlayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@id/relativeLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/diy_white"
                android:padding="@dimen/padding">

                <ImageView
                    android:id="@id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon2" />

                <TextView
                    android:id="@id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingRight="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/imageView3"
                    android:text="@string/str_msg107"
                    android:textColor="@color/diy_dark"
                    android:textSize="@dimen/text" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/more" />
            </RelativeLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/diy_gray" />

            <RelativeLayout
                android:id="@id/relativeLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/diy_white"
                android:padding="@dimen/padding">

                <ImageView
                    android:id="@id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon3" />

                <TextView
                    android:id="@id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingRight="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/imageView4"
                    android:text="@string/str_msg103"
                    android:textColor="@color/diy_dark"
                    android:textSize="@dimen/text" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/more" />
            </RelativeLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/diy_gray" />
            <RelativeLayout
                android:id="@id/relativeLayout9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/diy_white"
                android:padding="@dimen/padding">

                <ImageView
                    android:id="@+id/imageView_p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon7" />

                <TextView
                    android:id="@id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingRight="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/imageView_p"
                    android:text="@string/str_msg135"
                    android:textColor="@color/diy_dark"
                    android:textSize="@dimen/text" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/more" />
            </RelativeLayout>
            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/diy_gray" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="20dp"
            android:background="@color/diy_gray" />

        <RelativeLayout
            android:id="@id/relativeLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/diy_white"
            android:padding="@dimen/padding">

            <ImageView
                android:id="@id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon4" />

            <TextView
                android:id="@id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/imageView5"
                android:text="@string/str_msg104"
                android:textColor="@color/diy_dark"
                android:textSize="@dimen/text" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/more" />
        </RelativeLayout>
        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/diy_gray" />
        <RelativeLayout
            android:id="@id/relativeLayout8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/diy_white"
            android:padding="@dimen/padding">

            <ImageView
                android:id="@id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon6" />

            <TextView
                android:id="@id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/imageView8"
                android:text="@string/str_msg131"
                android:textColor="@color/diy_dark"
                android:textSize="@dimen/text" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/more" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/diy_gray" />

        <RelativeLayout
            android:id="@id/relativeLayout6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/diy_white"
            android:padding="@dimen/padding">

            <ImageView
                android:id="@id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon5" />

            <TextView
                android:id="@id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingRight="40dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/imageView6"
                android:text="@string/str_msg105"
                android:textColor="@color/diy_dark"
                android:textSize="@dimen/text" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/more" />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/diy_gray" />
        <RelativeLayout
            android:id="@id/linearlayout7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/diy_white"
            android:padding="@dimen/padding">

            <ImageView
                android:id="@id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon6" />

            <TextView
                android:id="@id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/imageView7"
                android:text="@string/str_msg106"
                android:textColor="@color/diy_dark"
                android:textSize="@dimen/text" />

            <TextView
                android:id="@+id/set_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/diy_gray" />

        <Button
            android:id="@id/Reg_quit"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_margin="20dp"
            android:background="@drawable/btn_bg"
            android:text="@string/str_btn101"
            android:textColor="@color/diy_white" />
    </LinearLayout>

</ScrollView>